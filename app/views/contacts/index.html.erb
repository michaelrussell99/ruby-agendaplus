<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="row no-gutters">
        <div class="col-sm-8">
          <h1>Contacts</h1>
        </div>
        <div class="col-sm-4 d-flex align-items-center justify-content-end">
          <%= link_to "New contact", new_contact_path, class: "btn btn-dark" %>
        </div>
      </div>

      <% if @contacts.any? %>
        <%= form_tag(contacts_path, method: :get) do %>
          <%= text_field_tag(:full_name, params[:full_name], class: "form-control form-control-lg", placeholder: "Enter a name") %>
          <div class="mt-3">
            <%= submit_tag "Search", class: "btn btn-light" %>
            <%= link_to "Reset", contacts_path, class: "btn btn-link" %>
          </div>
        <% end %>
      <% end %>

      <div id="contacts">
        <% @contacts.each do |contact| %>
          <%= render contact %>
        <% end %>

        <div class="mt-3">
          <%== pagy_bootstrap_nav(@pagy) %>
        </div>
      </div>
    </div>
  </div>
</div>
